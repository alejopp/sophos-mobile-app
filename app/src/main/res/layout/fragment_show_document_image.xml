<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/tv_show_doc_return"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginBottom="8dp"
        android:drawableStart="@drawable/ic_baseline_keyboard_backspace_24"
        android:drawablePadding="10dp"
        android:textColor="?attr/colorPrimary"
        android:text="@string/go_back"
        android:textSize="18sp"
        android:fontFamily="@font/montserrat_bold"
        android:layout_marginTop="16dp"
        app:layout_constraintBottom_toTopOf="@+id/iv_show_document_image"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/iv_show_document_image"
        android:layout_width="400dp"
        android:layout_height="500dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/tv_show_doc_return"
        tools:srcCompat="@tools:sample/avatars"
        android:contentDescription="@string/document_image" />

</androidx.constraintlayout.widget.ConstraintLayout>