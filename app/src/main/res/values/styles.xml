<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="vertical_line_yellow_40">
        <item name="android:layout_width">2dp</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:background">@drawable/vertical_separator</item>
    </style>

    <style name="menu_layout_pink">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">100dp</item>
        <item name="android:layout_marginTop">24dp</item>
        <item name="android:background">@drawable/menu_layout_pink_background</item>
    </style>

    <style name="menu_layout_blue">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">100dp</item>
        <item name="android:layout_marginTop">24dp</item>
        <item name="android:background">@drawable/menu_layout_blue_background</item>
    </style>

    <style name="menu_layout_aquamarine">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">100dp</item>
        <item name="android:layout_marginTop">24dp</item>
        <item name="android:background">@drawable/menu_layout_aquamarine_background</item>
    </style>

    <style name="menu_layout_text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/montserrat_bold</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="menu_layout_button">
        <item name="android:layout_width">140dp</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:paddingEnd">8dp</item>
        <item name="android:paddingStart">48dp</item>
        <item name="android:text">@string/enter</item>
        <item name="android:fontFamily">@font/montserrat_bold</item>
    </style>


</resources>