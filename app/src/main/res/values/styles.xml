<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="login_vertical_line">
        <item name="android:layout_width">2dp</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:background">@drawable/separator_vertical</item>
    </style>

    <style name="login_input_data_text">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:textColorHint">?attr/colorPrimary</item>
    </style>

    <style name="menu_layout_pink">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">100dp</item>
        <item name="android:layout_marginTop">24dp</item>
        <item name="android:background">@drawable/background_menu_layout_pink</item>
    </style>

    <style name="menu_layout_blue">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">100dp</item>
        <item name="android:layout_marginTop">24dp</item>
        <item name="android:background">@drawable/background_menu_layout_blue</item>
    </style>

    <style name="menu_layout_aquamarine">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">100dp</item>
        <item name="android:layout_marginTop">24dp</item>
        <item name="android:background">@drawable/background_menu_layout_aquamarine</item>
    </style>

    <style name="menu_layout_text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/montserrat_bold</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="menu_layout_button">
        <item name="android:layout_width">140dp</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:paddingEnd">8dp</item>
        <item name="android:paddingStart">48dp</item>
        <item name="android:text">@string/enter</item>
        <item name="android:fontFamily">@font/montserrat_bold</item>
    </style>

    <style name="document_input_data">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColorHint">@color/black</item>
        <item name="android:layout_marginTop">8dp</item>

    </style>


</resources>